<% layout("/layouts/boilerplate.ejs") %>

<style>
  @media (max-width: 575.9px) {
    .navbar_div {
      display: none;
    }
    .footer_div {
      display: none;
    }
    .scroll_up {
      bottom: 0px;
      display: flex;
      transition: none;
    }
    .listing_div {
      height: 100vh;
      margin-top: 0px;
      margin-bottom: 0px;
    }
    .signup_h1 {
      height: 2.8rem;
      font-size: 0.9rem;
      font-weight: 800;
      border-bottom: 1px solid rgba(100, 100, 100, 0.3);
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .signup_form {
      height: calc(100% - 3.7rem);
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: auto auto auto auto;
    }
    .welcome {
      display: inline-block;
      margin-top: 1rem;
      margin-bottom: 3rem;
      font-size: 1.4rem;
      margin-left: 1rem;
      margin-right: 1rem;
    }
    .signup_form form {
      width: 85%;
    }
  }
</style>

<div class="row mt-3 mb-3 signup">
  <h1 class="col-6 offset-3 mb-3 signup_h1">SignUp for TraveLust</h1>
  <div class="col-6 offset-3 signup_form">
    <h2 class="welcome">Welcome to TraveLust</h2>
    <form
      action="/signup"
      method="post"
      novalidate
      class="needs-validation"
      onsubmit="return validateForm()"
    >
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          type="text"
          name="username"
          class="form-control"
          id="username"
          required
        />
        <div class="invalid-feedback">Please Enter a Username</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          name="email"
          class="form-control"
          id="email"
          required
        />
        <div class="invalid-feedback">Please Enter an Email</div>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
        />
        <div class="invalid-feedback">Please Enter a Password</div>
      </div>
      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input
          type="password"
          name="confirmPassword"
          class="form-control"
          id="confirmPassword"
          required
        />
        <div class="invalid-feedback">Incorrect Password</div>
      </div>
      <button class="btn btn-dark">SignUp</button>
    </form>
  </div>
</div>

<script>
  function validateForm() {
    let password = document.querySelector(".password");
    let confirmPassword = document.querySelector(".confirmPassword");

    if (password !== confirmPassword) {
      return false;
    }

    return true;
  }
</script>
